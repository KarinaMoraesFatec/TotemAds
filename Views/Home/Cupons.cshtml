                            <button class="tecla">E</button>
                            <button class="tecla">F</button>
                        </div>
                        <div class="linha-teclas">
                            <button class="tecla">7</button>
                            <button class="tecla">8</button>
                            <button class="tecla">9</button>
                            <button class="tecla">G</button>
                            <button class="tecla">H</button>
                            <button class="tecla">I</button>
                        </div>
                        <div class="linha-teclas">
                            <button class="tecla limpar">üóëÔ∏è</button>
                            <button class="tecla">J</button>
                            <button class="tecla">0</button>
                            <button class="tecla">K</button>
                            <button class="tecla apagar">‚Üê</button>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ConteinerBtn">
             <div class="NavBtn">
             <a id="cancelar" href="@Url.Action("RevisarPedido", "Home")">Cancelar</a>
             <a class="btnProsseguir" id="proceedButton" href="@Url.Action("RevisarPedido", "Home")" style="display: none;">Aplicar</a>
             </div>
        </div>
    </div>

    <script src="~/js/cupons.js"></script>
</body>
</html>
