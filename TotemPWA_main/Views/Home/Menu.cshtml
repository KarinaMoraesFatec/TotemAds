@model TotemPWA.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Menu";
}
 
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pedidos</title>
    <link rel="stylesheet" href="~/css/tela2.css" asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Warp&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="~/img/favicon.png" />
  
</head>
<body>
    <div class="main">
        <!-- Header com Logo -->
        <header class="header">
            <img src="~/img/banner.jpg" alt="Logo do Restaurante" />
        </header>

        <div class="c1">
            <!-- Sidebar com Categorias -->
            <div class="menu">
                @foreach (var category in Model.RootCategories)
                {
                    <div class="menu-item @(category.Active ? "active" : "")">
                        <a asp-controller="Home" asp-action="Menu" asp-route-categorySlug="@category.Slug">
                            <img  class="img-menu-item" src="@category.Icon" alt="@category.Name">
                            <div>@category.Name</div>
                        </a>
                    </div>
                }
            </div>

            <!-- ConteÃºdo Principal -->
            <div class="content">
                <!-- Subcategorias -->
                <div class="container-categoria">
                    <div class="nav-categorias">
                        @foreach (var subcategory in Model.Subcategories)
                        {
                            <a asp-controller="Home" asp-action="Menu"
                               asp-route-categorySlug="@Model.SelectedCategorySlug"
                               asp-route-subcategorySlug="@subcategory.Slug"
                               class="@(subcategory.Active ? "active" : "")">
                                @subcategory.Name
                            </a>
                        }
                    </div>
                </div>

                <!-- Produtos -->
                <div class="pedido">
                    <div class="pedido-grid">
                        @foreach (var product in Model.Products)
                        {
                            <div class="pedido-item">
                                <img class="pedido-imagem" src="@product.Image" alt="@product.Name">
                                <h3 class="pedido-titulo">@product.Name</h3>
                                <h4 class="pedido-preco">
                                    @product.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                                </h4>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer com Total -->
        <div class="barra-inferior">
            <div class="total">
                <span>Total:</span>
            </div>
            <div class="preco">
                <span>R$ 0,00</span>
            </div>
            <div class="ConteinerBtn">
                <div class="NavBtn">
                    <a id="cancelar" href="@Url.Action("Index", "Home")">Cancelar</a>
                    <a id="botaoCarrinho" href="#"><img src="~/img/carrinhocom.png"></a>
                    <a id="prosseguir" class="disabled">Finalizar</a>
                </div>
            </div>
        </div>

        
    </div>

    <script src="~/js/filtroCategorias.js" asp-append-version="true"></script>
    <script src="~/js/modal.js" asp-append-version="true"></script>
    <script src="~/js/modalEdit.js" asp-append-version="true"></script>
</body>
</html>
